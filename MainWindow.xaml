<Window x:Class="Spice_Scroll_Shooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spice_Scroll_Shooter"
        mc:Ignorable="d"
        Title="Spice Scroll Shooter" Height="715" Width="540" ResizeMode="NoResize">
    <Canvas x:Name="MyCanvas" Focusable="True" Background="Black" KeyDown="KeyIsDown" KeyUp="KeyIsUp">

        <Button x:Name="StartGame"
                Content="Start Game"
                Height="61"
                Width="172"
                Canvas.Left="174"
                Canvas.Top="165"
                Background="Transparent"
                BorderThickness="0"
                FontSize="28"
                FontWeight="Bold"
                Foreground="DeepPink"
                ClickMode="Press"
                Click="StartGame_OnClick">

        </Button>
    </Canvas>

</Window>
